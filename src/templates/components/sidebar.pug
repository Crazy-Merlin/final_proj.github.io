.sidebar
  nav.menu
    ul.menu__list
      - var menuLinks = ["Обо мне", "Навыки", "Работы", "Отзывы"];
      each item in menuLinks 
        li.menu__item
          a(href="#").menu__link #{item}
    ul.socials
      - var socials = ['insta', 'vk', 'github', 'envelope'];
      each item in socials
        li.socials__item
          a(href=`${item === 'envelope' ? 'mailto:123123@yandex.ru' : '#'}`).socials__link
            +icon(item, 'socials__icon')
  .sidebar__close
    p X